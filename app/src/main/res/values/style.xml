<?xml version="1.0" encoding="utf-8"?>
<resources>




    <style name="TextStyle_NotoSans_Regular" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="InputEditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textAppearance">@style/TextStyle_NotoSans_Regular</item>
        <item name="android:paddingTop">@dimen/_0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingBottom">@dimen/_0dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal">@dimen/_16dp</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/_18dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_18dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_18dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_18dp</item>
        <item name="android:paddingHorizontal">@dimen/_16dp</item>
        <item name="android:paddingVertical">@dimen/_4dp</item>
        <item name="android:layout_marginVertical">@dimen/_2dp</item>
        <item name="boxStrokeWidth">@dimen/_1dp</item>
        <item name="android:textColorHint">@color/Focus_Grey</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="cursorColor">@color/black</item>
        <item name="hintEnabled">false</item>

    </style>


    <style name="CustomButtonMaterial" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/Dark_Fon</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">@dimen/_1dp</item>
        <item name="android:paddingTop">@dimen/_0dp</item>
        <item name="android:insetTop">@dimen/_0dp</item>
        <item name="android:insetBottom">@dimen/_0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingBottom">@dimen/_0dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_28dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_28dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_28dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_28dp</item>

        <item name="android:textAppearance">@style/TextStyle_NotoSans_Regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/_28dp</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:clickable">true</item>

    </style>

    <style name="CustomButtonSave" parent="CustomButtonMaterial">
        <item name="android:backgroundTint">@color/button_save_selector</item>
        <item name="strokeColor">@color/button_save_stroke_selector</item>



    </style>


</resources>