<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dark_Fon"
    tools:theme="@style/MyTheme">


    <LinearLayout
        android:id="@+id/containerTextInput"
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:id="@+id/hat_container"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginVertical="@dimen/gap10dp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp16">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dp78"
                android:layout_height="@dimen/dp18"
                android:contentDescription="@null"
                app:srcCompat="@drawable/focus_image" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1">

            </View>

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dp53"
                android:layout_height="@dimen/dp18"


                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/back_image"
                tools:ignore="ImageContrastCheck" />
        </LinearLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/dp16"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/hat_container" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/gap10dp"
            android:fontFamily="@font/geologica"
            android:gravity="center"
            android:lineHeight="26dp"
            android:paddingHorizontal="@dimen/dp16"
            android:text="@string/Registration"
            android:textColor="@color/black"
            android:textFontWeight="900"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp32"
            android:layout_marginVertical="@dimen/gap10dp"
            android:hint="@string/Annushka"
            android:paddingHorizontal="@dimen/dp16"
            android:textColorHint="@color/Focus_Grey"
            app:boxCornerRadiusBottomEnd="@dimen/dp18"
            app:boxCornerRadiusBottomStart="@dimen/dp18"
            app:boxCornerRadiusTopEnd="@dimen/dp18"
            app:boxCornerRadiusTopStart="@dimen/dp18"
            app:boxStrokeWidth="@dimen/dp1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/geologica"
                android:hint="@string/Annushka"
                android:minHeight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"

                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:boxStrokeWidth="@dimen/dp1"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mailLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp32"
            android:layout_marginVertical="@dimen/gap10dp"
            android:hint="@string/Mail"
            android:paddingHorizontal="@dimen/dp16"
            android:textColorHint="@color/Focus_Grey"
            app:boxCornerRadiusBottomEnd="36dp"
            app:boxCornerRadiusBottomStart="36dp"
            app:boxCornerRadiusTopEnd="36dp"
            app:boxCornerRadiusTopStart="36dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/geologica"
                android:hint="@string/Mail"
                android:textColor="@color/black"
                android:paddingVertical="0dp"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:boxStrokeWidth="@dimen/dp1"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp32"
            android:layout_marginVertical="@dimen/gap10dp"
            android:hint="@string/Password"
            android:paddingHorizontal="@dimen/dp16"
            android:textColorHint="@color/Focus_Grey"
            app:boxCornerRadiusBottomEnd="@dimen/dp18"
            app:boxCornerRadiusBottomStart="@dimen/dp18"
            app:boxCornerRadiusTopEnd="@dimen/dp18"
            app:boxCornerRadiusTopStart="@dimen/dp18"
            app:hintEnabled="false">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/geologica"
                android:hint="@string/Password"
                android:paddingHorizontal="16dp"

                android:paddingVertical="0dp"
                android:textFontWeight="400"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordConfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp32"
            android:layout_marginVertical="@dimen/gap10dp"
            android:layout_marginBottom="@dimen/gap8dp"
            android:hint="@string/PasswordConfirm"
            android:paddingHorizontal="@dimen/dp16"
            android:textColorHint="@color/Focus_Grey"
            app:boxCornerRadiusBottomEnd="@dimen/dp18"
            app:boxCornerRadiusBottomStart="@dimen/dp18"
            app:boxCornerRadiusTopEnd="@dimen/dp18"
            app:boxCornerRadiusTopStart="@dimen/dp18"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/geologica"
                android:hint="@string/PasswordConfirm"
                android:paddingHorizontal="16dp"
                android:paddingVertical="0dp"
                android:textFontWeight="400"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"

            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_have_account"
                style="@style/CustomButtonMaterial"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_margin="@dimen/dp16"
                android:clickable="true"
                android:fontFamily="@font/noto_sans_hk"
                android:includeFontPadding="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="@string/Have_acc"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:cornerRadius="28dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_safe"
                style="@style/CustomButtonMaterial"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_margin="@dimen/dp16"
                android:layout_marginHorizontal="@dimen/dp16"
                android:backgroundTint="@color/button_save_selector"
                android:clickable="true"
                android:enabled="true"
                android:fontFamily="@font/noto_sans_hk"
                android:includeFontPadding="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="@string/Save"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:cornerRadius="28dp"
                app:strokeColor="@color/button_save_stroke_selector"
                app:strokeWidth="1dp"
                tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
